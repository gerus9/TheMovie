<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/shape_chip_disable" android:state_checked="false" />
    <item android:drawable="@drawable/shape_chip_enable" android:state_checked="true" />

    <item android:state_checked="true"
        android:state_pressed="true"
        android:drawable="@drawable/shape_chip_enable" /> <!-- checked pressed-->

    <item android:state_checked="true"
        android:state_selected="true"
        android:drawable="@drawable/shape_chip_enable" />
</selector>

