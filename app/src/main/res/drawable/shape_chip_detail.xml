<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="@dimen/chip_layer" android:top="@dimen/chip_layer">
                <shape>
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="@dimen/chip_raduis" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="@dimen/chip_shadow" android:top="@dimen/chip_shadow">
                <shape>
                    <solid android:color="@color/chip_shadow" />
                    <corners android:radius="30dip" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="@dimen/chip_layer" android:right="@dimen/chip_layer">
                <shape>
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="@dimen/chip_raduis" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>